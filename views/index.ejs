<!DOCTYPE html>
<html>
  <head>
  	<!-- Meta -->
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<meta name="author" content="Human Interactive">

    <title><%= name %> <%= version %></title>

    <!-- Stylesheet -->
    <link rel="stylesheet" href="/stylesheets/bundle.min.css" />

    <!-- JavaScript -->
    <% if( isDevModeActive === true ){ %>
    	<script type="text/javascript" src="javascript/bundle.js"></script>
    <% }else{ %>
    	<script type="text/javascript" src="javascript/bundle.min.js"></script>
    <% } %>

    <script type="text/javascript">

		var parameter = {};

		parameter.name =  "<%= name %>";
		parameter.version = "<%= version %>";
		parameter.locale = "<%= locale %>";
		parameter.cdn = "<%= cdn %>";
		parameter.isDevModeActive = <%= isDevModeActive %>;
		parameter.isMultiplayerActive = <%= isMultiplayerActive %>;

		sessionStorage.setItem( "parameter", JSON.stringify( parameter ) );

	</script>
  </head>
  <body>
  <section id="ui-container">

  <!-- Score-Panel
    ================================================== -->
  <section id="score-panel">
    <div class="blue">0</div>
    <div class="red">0</div>
  </section>

  </section>
  <section id="canvas-container">
  </section>
  </body>
</html>
